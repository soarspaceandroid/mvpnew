<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <am.widget.shapeimageview.ShapeImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_bg"
        app:sivScaleTarget="height"
         />


    <ImageView
        android:id="@+id/closeX"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:scaleType="center"
        android:src="@mipmap/icon_close" />

    <TextView
        android:id="@+id/id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="36dp"
        android:text="来看电影吧"
        android:textColor="@color/color_482B19"
        android:textSize="22sp"
        android:layout_below="@+id/closeX"></TextView>



    <com.lihang.ShadowLayout
        android:id="@+id/id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="134dp"
        android:layout_below="@+id/id1"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        app:hl_cornerRadius="17.5dp"
        app:hl_shadowColor="@color/color_0D000000"
        app:hl_shadowLimit="5dp">



        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="请输入你的手机号"
            android:singleLine="true"
            android:paddingLeft="19dp"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="13sp"
            android:textColor="@color/color_919191"
            android:background="@null" />


    </com.lihang.ShadowLayout>


    <com.lihang.ShadowLayout
        android:id="@+id/id3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/id2"
        android:layout_marginLeft="36dp"
        app:hl_cornerRadius="17.5dp"
        app:hl_shadowColor="@color/color_0D000000"
        app:hl_shadowLimit="5dp">


        <EditText
            android:id="@+id/editCode"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:background="@null"
            android:textSize="13sp"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="19dp"
            android:textColor="@color/color_919191" />



    </com.lihang.ShadowLayout>

    <TextView
        android:id="@+id/volidateButton"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_below="@+id/id2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:layout_marginTop="28dp"
        android:text="发送验证码"
        android:gravity="center"
        android:textColor="@color/textview_select_000000"
        android:background="@drawable/bg_round_17_979797"
        android:textSize="13sp"/>


    <TextView
        android:id="@+id/errorTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@+id/id3"
        tools:text="fdafdasfds"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="36dp"
        android:textColor="@color/color_E81D1D"
        android:visibility="gone"
        />




    <TextView
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginRight="36dp"
        android:textSize="14sp"
        android:text="登录"
        android:layout_above="@+id/xieyi"
        android:layout_marginLeft="36dp"
        android:gravity="center"
        android:layout_marginBottom="38dp"
        android:background="@drawable/bg_gradint_ffc93a_ff991b"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/xieyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="注册资料/登录即表示同意《用户注册协议》与《隐私政策》"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_919191"
        />

</RelativeLayout>
