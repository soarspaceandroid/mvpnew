<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SetupTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/setup_back</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_e02128</item>
        <item name="android:listDivider">@drawable/black_line</item>
        <item name="colorPrimaryDark">@color/color_e02128</item>
        <item name="colorAccent">@color/color_e02128</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim_Left_Right</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ActivityAnim_Left_Right" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_right_out</item>
    </style>

</resources>